<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="60sp"
            android:text="What is...">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_var1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textSize="50sp"
                android:text="8"></TextView>
            <TextView
                android:id="@+id/tv_operation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="50sp"
                android:text="X"></TextView>
            <TextView
                android:id="@+id/tv_var2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="50sp"
                android:text="3"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_answer"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="Your answer..."
                android:textSize="40sp"
                android:textAlignment="center"></EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_done"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="DONE"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="@drawable/rectangle_background"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:src="@drawable/math_image">


        </ImageView>
    </LinearLayout>

</FrameLayout>